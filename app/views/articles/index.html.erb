<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= article.title %> 
    </li>
    <li>
    <%= article.text %>
    </li>
    <% unless article.image == nil %>
    
    <%= image_tag article.image_url if article.image %>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path, class: 'btn btn-primary' %>